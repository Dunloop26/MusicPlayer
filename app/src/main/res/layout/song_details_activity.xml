<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SongDetailsActivity">

    <ImageView
        android:id="@+id/songDetails_imageSongCover"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="80dp"
        android:contentDescription="@string/song_image_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/songDetails_textViewSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Song Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songDetails_imageSongCover" />

    <Button
        android:id="@+id/songDetails_buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songDetails_textViewSongDuration" />

    <Button
        android:id="@+id/songDetails_buttonPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Prev"
        app:layout_constraintEnd_toStartOf="@+id/songDetails_buttonPlay"
        app:layout_constraintTop_toTopOf="@+id/songDetails_buttonPlay" />

    <Button
        android:id="@+id/songDetails_buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Next"
        app:layout_constraintStart_toEndOf="@+id/songDetails_buttonPlay"
        app:layout_constraintTop_toTopOf="@+id/songDetails_buttonPlay" />

    <TextView
        android:id="@+id/songDetails_textViewSongDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songDetails_textViewSongName" />
</androidx.constraintlayout.widget.ConstraintLayout>